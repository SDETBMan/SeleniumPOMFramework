<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Master Automation Suite" parallel="false" thread-count="1">

    <groups>
        <define name="all-groups">
            <include name="smoke"/>
            <include name="regression"/>
            <include name="web"/>
        </define>
    </groups>

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="com.framework.listeners.TestListener"/>
        <listener class-name="com.framework.utils.AnnotationTransformer"/>
    </listeners>

    <parameter name="headless" value="true" />

    <test name="UI - Chrome (Regression)">
        <parameter name="browser" value="chrome" />
        <groups>
            <run>
                <include name="regression" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.LoginTest" />
            <class name="com.framework.tests.DashboardTest" />
        </classes>
    </test>

    <test name="UI - Firefox (Regression)">
        <parameter name="browser" value="firefox" />
        <groups>
            <run>
                <include name="regression" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.LoginTest" />
        </classes>
    </test>

</suite>





