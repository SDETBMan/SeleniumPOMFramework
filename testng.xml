<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Master Automation Suite" parallel="false" thread-count="1">

    <groups>
        <define name="all-groups">
            <include name="unit"/>
            <include name="integration"/>
            <include name="smoke"/>
            <include name="regression"/>
            <include name="web"/>
            <include name="mobile"/>
        </define>
    </groups>

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="com.framework.listeners.TestListener"/>
        <listener class-name="com.framework.utils.AnnotationTransformer"/>
    </listeners>

    <parameter name="headless" value="true" />

    <test name="Unit Tests">
        <groups>
            <run>
                <include name="unit" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.unit.StringUtilsTest" />
        </classes>
    </test>

    <test name="Integration Tests">
        <groups>
            <run>
                <include name="integration" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.api.UserApiTest" />
        </classes>
    </test>

    <test name="UI - Chrome (Smoke)">
        <parameter name="browser" value="chrome" />
        <groups>
            <run>
                <include name="smoke" />
                <include name="regression" />
                <include name="web" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.LoginTest" />
            <class name="com.framework.tests.DashboardTest" />
        </classes>
    </test>

    <test name="UI - Firefox">
        <parameter name="browser" value="firefox" />
        <groups>
            <run>
                <include name="regression" />
                <include name="web" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.LoginTest" />
        </classes>
    </test>

    <test name="UI - Edge">
        <parameter name="browser" value="edge" />
        <groups>
            <run>
                <include name="regression" />
                <include name="web" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.LoginTest" />
        </classes>
    </test>

    <test name="Mobile - Android">
        <parameter name="browser" value="android" />
        <parameter name="headless" value="false" />
        <groups>
            <run>
                <include name="mobile" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.MobileLoginTest" />
        </classes>
    </test>

</suite>





