<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Master Automation Suite" parallel="tests" thread-count="4">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="com.framework.listeners.TestListener"/>
        <listener class-name="com.framework.utils.AnnotationTransformer"/>
    </listeners>

    <test name="Web - Chrome (Regression)">
        <parameter name="browser" value="chrome" />
        <parameter name="headless" value="true" />
        <groups>
            <run>
                <include name="smoke" />
                <include name="regression" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.LoginTest" />
            <class name="com.framework.tests.DashboardTest" />
            <class name="com.framework.tests.AddToCartTest" />
        </classes>
    </test>

    <test name="Web - Firefox (Smoke)">
        <parameter name="browser" value="firefox" />
        <parameter name="headless" value="true" /> <groups>
        <run>
            <include name="smoke" />
        </run>
    </groups>
        <classes>
            <class name="com.framework.tests.LoginTest" />
        </classes>
    </test>

