<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Master Automation Suite" parallel="false" thread-count="1">

    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
        <listener class-name="com.framework.listeners.TestListener"/>
        <listener class-name="com.framework.utils.AnnotationTransformer"/>
    </listeners>

    <parameter name="headless" value="true" />

    <test name="Unit Tests">
        <classes>
            <class name="com.framework.unit.StringUtilsTest" />
        </classes>
    </test>

    <test name="Integration Tests">
        <classes>
            <class name="com.framework.api.UserApiTest" />
        </classes>
    </test>

    <test name="UI - Chrome (Smoke)">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.framework.tests.LoginTest" />
            <class name="com.framework.tests.DashboardTest" />
        </classes>
    </test>

    <test name="UI - Firefox">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="com.framework.tests.LoginTest" />
        </classes>
    </test>

    <test name="UI - Edge">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.framework.tests.LoginTest" />
        </classes>
    </test>

</suite>





