<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Master Automation Suite" parallel="tests" thread-count="4">

    <groups>
        <define name="all-groups">
            <include name="unit"/>
            <include name="integration"/>
            <include name="smoke"/>
            <include name="regression"/>
        </define>
    </groups>

    <listeners>
        <listener class-name="com.framework.listeners.TestListener" />
        <listener class-name="com.framework.utils.AnnotationTransformer" />
    </listeners>

    <parameter name="headless" value="true" />

    <test name="Unit Tests">
        <groups>
            <run>
                <include name="unit" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.unit.StringUtilsTest" />
        </classes>
    </test>

    <test name="Integration Tests">
        <groups>
            <run>
                <include name="integration" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.api.UserApiTest" />
        </classes>
    </test>

    <test name="UI - Chrome (Smoke)">
        <parameter name="browser" value="chrome" />
        <groups>
            <run>
                <include name="smoke" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.LoginTest" />
        </classes>
    </test>

    <test name="UI - Firefox (Regression)">
        <parameter name="browser" value="firefox" />
        <groups>
            <run>
                <include name="regression" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.LoginTest" />
        </classes>
    </test>

    <test name="UI - Edge (Regression)">
        <parameter name="browser" value="edge" />
        <groups>
            <run>
                <include name="regression" />
            </run>
        </groups>
        <classes>
            <class name="com.framework.tests.LoginTest" />
        </classes>
    </test>

</suite>